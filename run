#!/bin/bash

export Y2DIR=src

case x"$1" in
    xc )
        shift
        yast2 --ncurses hana_updater "$@"
        ;;
    xg )
        shift
        yast2 hana_updater "#@"
        ;;
    xdeb)
        echo "Running X"
        shift
        export Y2DEBUG=1
        yast2 hana_updater "$@"
        ;;
    'x-h')
        echo "Parameters:"
        echo "  c       Force ncurses"
        echo "  g       Run in Qt"
        echo "  deb     Run in Qt with Debug Mode"
        exit 0
        ;;
    * )
        yast2 hana_updater "$@"
        ;;
esac